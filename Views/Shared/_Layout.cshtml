<!DOCTYPE html>
<html>

<head>
    <title>Dutch Treat: @ViewBag.Title</title>
    <link rel="stylesheet" href="~/node_modules\bootstrap\dist\css\bootstrap.min.css">
    <link rel="stylesheet" href="~/node_modules\font-awesome\css\font-awesome.min.css">
    <link href="~/css/site.css" rel="stylesheet" />
    <meta charset="UTF-8">
</head>

<body>
    <header class="container">
        <nav class="navbar navbar-dark bg-dark navbar-expand-md">
            <h1 class="navbar-brand"><i class="fa fa-paint-brush"></i> Welcome to Dutch Treat</h1>
            <button class="navbar-toggler" data-toggle="collapse" data-target="#the-menu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="the-menu" class="navbar-collapse collapse">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" asp-controller="App" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="App" asp-action="Shop">Shop</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="App" asp-action="Contact">Contact</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="App" asp-action="About">About</a></li>
                </ul>
            </div>
        </nav>
    </header>
    <section class="container">
        <h2 class="text-center">@ViewBag.Title</h2>
        @RenderBody()
    </section>
    <footer class="container">
        <div class="text-center">Copyright 2020 Dutch Treat LLC</div>
    </footer>

    <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="~/node_modules\bootstrap\dist\js\bootstrap.min.js"></script>
    <script src="~/js/index.js"></script>
    @RenderSection("scripts", false)
</body>

</html>